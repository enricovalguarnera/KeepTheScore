<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.keepthescore.FootballActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Team A"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    android:padding="8dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:cursorVisible="false"
                    android:imeOptions="actionDone"/>

                <TextView
                    android:id="@+id/team_a_score_football"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="56sp"
                    android:layout_margin="16dp"
                    android:gravity="center" />

                <Button
                    android:id="@+id/goal_button_teamA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Goal"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="true"
                    android:textSize="20dp"
                    android:padding="8dp"
                    android:textColor="@drawable/textcolorfootball"
                    android:background="@drawable/footballbutton"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="24dp"
                    android:onClick="addOneGoalTeamA" />



            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Team B"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    android:padding="8dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:cursorVisible="false"
                    android:imeOptions="actionDone"/>

                <TextView
                    android:id="@+id/team_b_score_football"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_margin="16dp"
                    android:textColor="@android:color/black"
                    android:textSize="56sp"
                    android:gravity="center" />

                <Button
                    android:id="@+id/goal_button_teamB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Goal"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="true"
                    android:textSize="20dp"
                    android:padding="8dp"
                    android:textColor="@drawable/textcolorfootball"
                    android:background="@drawable/footballbutton"
                    android:layout_gravity="center"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginBottom="8dp"
                    android:onClick="addOneGoalTeamB"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cartellinogiallo_teamA_textview"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="0"
                        android:textColor="@android:color/black"
                        android:textSize="32sp"
                        android:layout_marginLeft="24dp"
                        android:gravity="center" />

                    <Button
                        android:id="@+id/add_yellowcard_teamA"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Add 1"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/footballbutton"
                        android:textColor="@drawable/textcolorfootball"
                        android:onClick="addYellowCardTeamA"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.45"
                    android:src="@drawable/cartellino_giallo"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cartellinogiallo_teamB_textview"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="0"
                        android:textColor="@android:color/black"
                        android:textSize="32sp"
                        android:layout_marginRight="24dp"
                        android:gravity="center" />

                    <Button
                        android:id="@+id/add_yellowcard_teamB"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Add 1"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="24dp"
                        android:background="@drawable/footballbutton"
                        android:textColor="@drawable/textcolorfootball"
                        android:onClick="addYellowCardTeamB"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cartellinorosso_teamA_textview"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="0"
                        android:textColor="@android:color/black"
                        android:textSize="32sp"
                        android:layout_marginLeft="24dp"
                        android:gravity="center" />

                    <Button
                        android:id="@+id/add_redcard_teamA"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Add 1"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/footballbutton"
                        android:textColor="@drawable/textcolorfootball"
                        android:onClick="addRedCardTeamA"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.45"
                    android:src="@drawable/cartellino_rosso"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cartellinorosso_teamB_textview"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="0"
                        android:textColor="@android:color/black"
                        android:textSize="32sp"
                        android:layout_marginRight="24dp"
                        android:gravity="center" />

                    <Button
                        android:id="@+id/add_redcard_teamB"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Add 1"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="24dp"
                        android:background="@drawable/footballbutton"
                        android:textColor="@drawable/textcolorfootball"
                        android:onClick="addRedCardTeamB"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/reset_button_view_football"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Reset"
        android:fontFamily="sans-serif-black"
        android:textSize="20dp"
        android:textColor="@drawable/textcolorfootball"
        android:background="@drawable/footballbutton"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:onClick="resetPointTeamsFootball" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textAllCaps="true"
        android:textSize="16dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@drawable/textcolorfootball"
        android:background="@drawable/footballbutton"
        android:layout_alignTop="@+id/reset_button_view"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:onClick="returnToMainActivity"
        android:layout_alignBottom="@+id/reset_button_view_football" />

</RelativeLayout>
