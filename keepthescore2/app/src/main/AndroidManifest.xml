<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.keepthescore">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BasketActivity"
            android:screenOrientation="portrait"
            android:label="@string/basket"/>
        <activity android:name=".FootballActivity"
            android:screenOrientation="portrait"
            android:label="@string/football"/>
        <activity android:name=".VolleyActivity"
            android:screenOrientation="portrait"
            android:label="@string/volley"/>
        <activity android:name=".TennisActivity"
            android:screenOrientation="portrait"
            android:label="@string/tennis"/>
        <activity android:name=".RugbyActivity"
            android:screenOrientation="portrait"
            android:label="@string/rugby"/>
    </application>

</manifest>